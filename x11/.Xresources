Xcursor.size:           48

URxvt*geometry:         120x30
URxvt*depth:            32

URxvt*buffered:         true
URxvt*cursorBlink:      false
URxvt*underlineColor:   purple


URxvt.internalBorder:   15
URxvt*font:             xft:Terminus:size=12
URxvt*boldFont:         xft:Terminus:size=12:style=bold

URxvt*borderless:       1
URxvt*scrollBar:        false
URxvt*loginShell:       true

Urxvt*secondaryScroll:  true
URxvt*saveLines:        5000
URxvt*termName:         rxvt-unicode
URxvt*iso14755:         false


! BEGIN PERL EXTENSIONS
URxvt.perl-ext-common:  default,resize-font,url-select,keyboard-select,selection-to-clipboard
URxvt.underlineURLs:    false
URxvt.urlLauncher:      /usr/bin/qutebrowser
URxvt.matcher.button:   1
URxvt.keysym.C-minus:     resize-font:smaller
URxvt.keysym.C-plus:      resize-font:reset
URxvt.keysym.C-equal:     resize-font:bigger
URxvt.keysym.C-question:  resize-font:show
! PERL URL SELECT
URxvt.url-select.underline: false
URxvt.url-select.launcher:  /usr/bin/qutebrowser
URxvt.keysym.M-e:       perl:url-select:select_next
URxvt.keysym.M-d:       perl:keyboard-select:activate
! defaut to paste clipboard is control alt v, I remap this to control shift v.
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
! END PERL EXTENSIONS

*foreground:            #bbbbbb
*background:            #000000

