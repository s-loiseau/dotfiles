##### I3 CONTROLS ########

bindsym $mod2+j workspace next
bindsym $mod2+k workspace prev
bindsym $mod2+u workspace 1
bindsym $mod2+i workspace 2
bindsym $mod2+o workspace 3
bindsym $mod2+p workspace 4

bindsym $mod2+Shift+u move container to workspace 1
bindsym $mod2+Shift+i move container to workspace 2
bindsym $mod2+Shift+o move container to workspace 3
bindsym $mod2+Shift+p move container to workspace 4

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec i3-msg exit
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left 50
bindsym $mod+Shift+j move down 50
bindsym $mod+Shift+k move up 50
bindsym $mod+Shift+l move right 50

bindsym $mod+m split h
bindsym $mod+v split v

bindsym $mod+n     floating toggle
bindsym $mod+space focus mode_toggle

bindsym $mod2+z kill

bindsym $mod+Left exec --no-startup-id kaboom.py move
bindsym $mod+Right exec --no-startup-id kaboom.py move
bindsym $mod+Up exec --no-startup-id kaboom.py size
bindsym $mod+Down exec --no-startup-id kaboom.py size
bindsym $mod+g fullscreen toggle

